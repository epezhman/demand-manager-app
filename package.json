{
  "name": "dmdesktop",
  "productName": "Demand Manager Desktop",
  "description": "Demand Manager for Computers.",
  "author": "TUM <epezhman@gmail.com>",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron ./app --enable-logging --remote-debugging-port=9222",
    "dev": "set NODE_ENV=development&& npm start",
    "dev:osx": "NODE_ENV=development CSC_NAME='demand-manager-desktop' npm start",
    "dist:win": "build -w --x64 && build -w --ia32",
    "dist:osx": "CSC_NAME='Mac Developer: epezhman@gmail.com (56C8TPEKK6)' build -o --x64",
    "dist:linux": "build -l --x64 && build -l --ia32"
  },
  "devDependencies": {
    "electron-builder": "^5.0.0",
    "electron-prebuilt": "^1.2.2"
  },
  "build": {
    "appId": "de.tum.dm",
    "app-category-type": "public.app-category.utilities",
    "iconUrl": "https://s3.eu-central-1.amazonaws.com/demand-manager-resources/icons/icon.ico",
    "win": {
      "remoteReleases": "https://github.com/epezhman/demand-manager-app"
    },
    "osx": {
      "title": "Demand Manager Desktop",
      "background": "build/background.png",
      "icon": "build/icon.icns",
      "icon-size": 128,
      "contents": [
        {
          "x": 355,
          "y": 125,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 155,
          "y": 125,
          "type": "file"
        }
      ]
    }
  }
}
