{
  "name": "i13dmdesktop",
  "productName": "i13DemandManager",
  "description": "i13 Demand Manager for Computers.",
  "author": {
    "name": "TUM, Institute of Informatics",
    "email": "p.nasirifard@tum.de",
    "url": "http://i13dr.de/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/epezhman/demand-manager-app"
  },
  "license": "MIT",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron ./app --remote-debugging-port=9222",
    "dev:win": "set NODE_ENV=development&& npm start",
    "dev:linux": "NODE_ENV=development $NODE_DEBUG_OPTION npm start",
    "reload": "live-reload app --port 35729"
  },
  "devDependencies": {
    "async": "2.1.5",
    "aws-sdk": "2.31.0",
    "del": "2.2.2",
    "electron-builder": "16.2.0",
    "electron-prebuilt": "1.4.13",
    "gulp": "3.9.1",
    "gulp-if": "2.0.2",
    "gulp-jscs": "4.0.0",
    "gulp-jshint": "2.0.4",
    "gulp-load-plugins": "1.5.0",
    "gulp-print": "2.0.1",
    "gulp-sass": "3.1.0",
    "gulp-task-listing": "1.0.1",
    "gulp-util": "3.0.8",
    "jshint": "2.9.4",
    "jshint-stylish": "2.2.1",
    "live-reload": "1.1.0",
    "mkdirp": "0.5.1",
    "mv": "2.1.1",
    "q": "1.5.0",
    "rimraf": "2.6.1",
    "yargs": "7.0.2"
  },
  "build": {
    "appId": "de.tum.i13dmdesktop",
    "files": [
      "**/*",
      "!assets/stylesheets/sass"
    ],
    "linux": {
      "icon": "app/assets/img/",
      "category": "Utility",
      "target": [
        "deb"
      ]
    }
  }
}
