{
  "name": "tumdmdesktop",
  "productName": "TUM Demand Manager",
  "description": "TUM Demand Manager for Computers.",
  "author": {
    "name": "TUM, Institute of Informatics",
    "email": "p.nasirifard@tum.de",
    "url": ""
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron ./app --remote-debugging-port=9222",
    "dev:win": "set NODE_ENV=development&& npm start",
    "dev:linux": "NODE_ENV=development npm start",
    "reload": "live-reload app --port 35729"
  },
  "devDependencies": {
    "async": "^2.0.0-rc.6",
    "aws-sdk": "^2.4.0",
    "del": "^2.2.0",
    "electron-builder": "^5.14.2",
    "electron-prebuilt": "^1.2.2",
    "gulp": "^3.9.1",
    "gulp-if": "^2.0.1",
    "gulp-jscs": "^4.0.0",
    "gulp-jshint": "^2.0.1",
    "gulp-load-plugins": "^1.2.4",
    "gulp-print": "^2.0.1",
    "gulp-sass": "^2.3.2",
    "gulp-task-listing": "^1.0.1",
    "gulp-util": "^3.0.7",
    "jshint": "^2.9.2",
    "jshint-stylish": "^2.2.0",
    "live-reload": "^1.1.0",
    "mkdirp": "^0.5.1",
    "mv": "^2.1.1",
    "q": "^1.4.1",
    "rimraf": "^2.5.2",
    "yargs": "^4.7.1"
  },
  "build": {
    "appId": "de.tum.tumdmdesktop",
    "app-category-type": "public.app-category.utilities",
    "iconUrl": "https://s3.eu-central-1.amazonaws.com/demand-manager-resources/icons/icon.ico",
    "files": [
      "**/*",
      "!assets/stylesheets/sass"
    ],
    "dmg": {
      "title": "TUM Demand Manager",
      "icon-size": 128,
      "contents": [
        {
          "x": 355,
          "y": 125,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 155,
          "y": 125,
          "type": "file"
        }
      ]
    }
  }
}
