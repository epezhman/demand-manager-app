{
  "name": "dmdesktop",
  "productName": "Demand Manager Desktop",
  "description": "Demand Manager for Computers.",
  "author": "TUM <p.nasirifard@tum.de>",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron ./app --enable-logging --remote-debugging-port=9222",
    "dev": "set NODE_ENV=development&& npm start"
  },
  "devDependencies": {
    "aws-sdk": "^2.4.0",
    "electron-builder": "^5.0.0",
    "electron-prebuilt": "^1.2.2",
    "gulp": "^3.9.1",
    "gulp-if": "^2.0.1",
    "gulp-jscs": "^3.0.2",
    "gulp-jshint": "^2.0.1",
    "gulp-load-plugins": "^1.2.4",
    "gulp-print": "^2.0.1",
    "gulp-task-listing": "^1.0.1",
    "gulp-util": "^3.0.7",
    "jshint": "^2.9.2",
    "jshint-stylish": "^2.2.0",
    "q": "^1.4.1",
    "yargs": "^4.7.1"
  },
  "build": {
    "appId": "de.tum.dm",
    "app-category-type": "public.app-category.utilities",
    "iconUrl": "https://s3.eu-central-1.amazonaws.com/demand-manager-resources/icons/icon.ico",
    "osx": {
      "title": "Demand Manager Desktop",
      "background": "build/background.png",
      "icon": "build/icon.icns",
      "icon-size": 128,
      "contents": [
        {
          "x": 355,
          "y": 125,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 155,
          "y": 125,
          "type": "file"
        }
      ]
    }
  }
}
